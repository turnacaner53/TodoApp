@page "/"
@inherits TodoAppComponentBase

<div class="container">
    <Card>
        <CardHeader>
            <CardTitle>
                TODO LIST
            </CardTitle>
        </CardHeader>
        <CardBody>
            <form id="NewItemForm" class="row row-cols-lg-auto g-3 align-items-center"
                  @onsubmit:preventDefault
                  @onsubmit="()=> Create()">

                <div class="col-12">
                    <div class="input-group">
                        <input name="NewTodoText" type="text" class="form-control" placeholder="Enter what todo..."
                               @bind-value="@NewTodoText" />
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>

            <hr />

            <ul id="TodoList">
                @foreach (var todoItem in TodoItems)
                {
                     <li data-id="@todoItem.Id">
                        <i class="far fa-trash-alt"
                           @onclick="() => Delete(todoItem)"
                           ></i> @todoItem.Text
                    </li>
                }
            </ul>
        </CardBody>
    </Card>
</div>